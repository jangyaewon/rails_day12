<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>
<hr/>

<p>
  <strong>Contents:</strong>
  <%= @post.contents %>
</p>


<%= link_to '수정', edit_post_path(@post), class: 'btn btn-warning text-white' %> &nbsp;
<%= link_to '목록', posts_path, class: 'btn btn-info' %>&nbsp;
<%= link_to '삭제', post_path(@post), class: 'btn btn-danger', method: 'DELETE', data: {confirm: "삭제하시겠습니까?"}%>

<br><br>
<!--  댓글 입력 -->
<%= render 'comments/form' ,post: @post %><br>

<!--  댓글 리스트 -->

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Content</th>
      <th scope="col">Button</th>
    </tr>
  </thead>
  <tbody>
  <% @post.comments.each do |comment| %>
    <tr>
      <th scope="row"><%= comment.id %></th>
      <td><%= comment.content %></td>
      <td><%= link_to "삭제", "comments/#{comment.id}", class: 'btn btn-danger', method: "delete" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
