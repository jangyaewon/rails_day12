<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>
<hr/>

<p>
  <strong>Contents:</strong>
  <%= @post.contents %>
</p>

<p>
  <strong>ImagePath:</strong>
  <img src="<%= @post.image_path %>" width= "100%"/>
</p>

<p>
  <strong>Thumb Fill:</strong>
  <img src="<%= @post.image_path.thumb_Fill %>"/>
</p>

<p>
  <strong>Thumb Fit:</strong>
  <img src="<%= @post.image_path.thumb_Fit %>"/>
</p>

<%= link_to '수정', edit_post_path(@post), class: 'btn btn-warning text-white' %> &nbsp;

<!--@post가 어디 카페에 종속되어있는지 알려준다.-->
<%= link_to '목록', cafe_path(@post.daum), class: 'btn btn-info' %>&nbsp;
<%= link_to '삭제', post_path(@post), class: 'btn btn-danger', method: 'DELETE', data: {confirm: "삭제하시겠습니까?"}%>

<br><br>
<!--  댓글 입력 -->
<%= render 'comments/form' ,post: @post %><br>

<!--  댓글 리스트 -->

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Content</th>
      <th scope="col">Button</th>
    </tr>
  </thead>
  <tbody>
  <% @post.comments.each do |comment| %>
    <tr>
      <th scope="row"><%= comment.id %></th>
      <td><%= comment.content %></td>
      <td><%= link_to "삭제", "comments/#{comment.id}", class: 'btn btn-danger', method: "delete" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
